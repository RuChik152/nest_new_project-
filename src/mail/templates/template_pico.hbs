    <title></title>
    <style>
        * {
            color: #8b2062;
            font-family: 'Open Sans', sans-serif;
        }
        body {
            background: transparent;
            background-image: url(https://mzyxhu.stripocdn.email/content/guids/CABINET_ffdd41b9f093a5654cca96a2f62ac6ee229beb35853a7b2273355a1da39a7d36/images/fon_4.png);
            background-repeat: no-repeat;
            background-position: center top;"
        }

        .wrapper {
            width: 60vw;
            margin: 0 auto;
            display: flex;
            align-items: center;
            flex-direction: column;
        }

        .hello {
            width: 100%;
            display: flex;
            flex-wrap: wrap;
            justify-content: space-between;
            position: relative;
        }

        .hello__title {
            font-size: 2em;
            color: #8b2062;
        }

        .hello__img {
            width: 18%;
        }

        hr {
            border: 1px solid #8b2062;
            width: 90%;
        }

        .text {
            color: #8b2062;
            text-align: center;
            font-size: 1.3em;
        }

        .ul {
            width: 100%;
        }

        .videoTitle {
            display: flex;
            height: auto;
            flex-direction: column;
            justify-content: center;
        }

        .videoTitle__text {
            text-align: center;
            height: fit-content;
            font-size: 2.6em;
            font-weight: 600;
        }

        .actionText {
            text-align: center;
            font-size: 2em;
        }

        .actionAllStep {
            width: 100%;
            text-align: left;
            font-size: 1.3em;
            color: #8b2062;
        }

        .wrapper__video {
            margin: 0 auto;
        }

        .video__img {
            max-width: 100%;
        }

        .list {
            width: 100%;
        }
        .social {
            display: flex;
            justify-content: center;
            width: 90vw;
        }
        .social a img {
            width: 100%;
        }
        @media (max-width: 425px) {
            .hello__img {
                position: absolute;
                width: 35%;
                bottom: 1px;
                right: 1px;
                display: none;
            }
            .hello {
                justify-content: center;
            }
            .hello__title{
                text-align: center;
            }
            .list {
                width: 84vw;
            }

            .actionText {
                font-size: 1.5em;
            }

            .text {

            }

            .wrapper__video {

            }
        }
    </style>
</head>
<body>
<div class="wrapper">
